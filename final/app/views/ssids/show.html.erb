<script type="text/javascript">
var handler = Gmaps.build('Google');
handler.buildMap({ internal: {id: 'map'}}, function(){
  var markers = handler.addMarkers([
<%
	count = @ssid.gpspoints.count
	@ssid.gpspoints.each_with_index do |point,i|
		if i < (count-1) then %>
			<%= "{ lat: " + (((point.latitude.split(" ",2)[1].to_f%100/60).round(7) + point.latitude.split(" ",2)[1].to_i/100)).to_s + ", lng: " + (-((point.longitude.split(" ",2)[1].to_f%100/60).round(7) + point.longitude.split(" ",2)[1].to_i/100)).to_s + "}," %>
		<% else %>
			<%= "{ lat: " + (((point.latitude.split(" ",2)[1].to_f%100/60).round(7) + point.latitude.split(" ",2)[1].to_i/100)).to_s + ", lng: " + (-((point.longitude.split(" ",2)[1].to_f%100/60).round(7) + point.longitude.split(" ",2)[1].to_i/100)).to_s + "}" %>
		<% end
	end
%>
  ]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>
