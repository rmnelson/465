<script type="text/javascript">
var handler = Gmaps.build('Google');
handler.buildMap({ internal: {id: 'map'}}, function(){
  var markers = handler.addMarkers([
<%
	@ssid = Ssid.all
        count = @ssid.count
        @ssid.each_with_index do |s,i|
                if i < (count-1) then %>
                        <%= "{ lat: " + s.pollpoints.order("signal DESC").first.gpspoint.lat.to_s + ", lng: " + s.pollpoints.order("signal DESC").first.gpspoint.lng.to_s + " }," %>
                <% else %>
			<% if s.pollpoints.count > 0 then %>
                        	<%= "{ lat: " + s.pollpoints.order("signal DESC").first.gpspoint.lat.to_s + ", lng: " + s.pollpoints.order("signal DESC").first.gpspoint.lng.to_s + " }" %>
			<% else %>
	                        <%= "{ lat: 39.737045, " + "lng: -121.8638933" +  " }" %>
                	<% end
		end
        end
%>
]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>

